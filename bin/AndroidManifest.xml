            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
        	android:name=".LibraryShelves"
			android:label="@string/library_shelves">
		</activity>
        <activity 
        	android:name=".UpdateLibrary"
			android:label="@string/library_shelves">
		</activity>
        <activity 
        	android:name=".LibraryBookTableOfContents"
			android:label="@string/library_shelves">
		</activity>
        <activity 
        	android:name=".LibraryBookContent"
			android:label="@string/library_shelves">
		</activity>
    	<activity 
    	    android:name="com.google.ads.AdActivity"
    	    android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
    </application>
</manifest>